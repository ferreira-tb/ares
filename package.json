{
    "name": "claustrophobia",
    "productName": "Claustrophobia",
    "version": "1.0.0-beta",
    "description": "Ferramenta para Tribal Wars",
    "author": "Andrew Ferreira <andrew.shien2@gmail.com> (https://github.com/ferreira-tb)",
    "license": "MIT",
    "main": "dist/main.js",
    "keywords": [
        "tribal-wars",
        "electron"
    ],
    "scripts": {
        "dev": "vite",
        "build": "run-p type-check build-only && node dist.mjs && npm run build-only:pre",
        "build-only": "vite build --config vite.config.ts",
        "build-only:pre": "vite build --config pre.config.ts",
        "type-check": "vue-tsc --noEmit",
        "main": "rollup -c && electron .",
        "start": "npm run build && npm run main"
    },
    "dependencies": {
        "electron-store": "^8.1.0",
        "pinia": "^2.0.28",
        "vue": "^3.2.45",
        "vue-router": "^4.1.6"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^24.0.0",
        "@rollup/plugin-json": "^6.0.0",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@rollup/plugin-typescript": "^11.0.0",
        "@types/node": "^18.11.12",
        "@vitejs/plugin-vue": "^4.0.0",
        "@vue/tsconfig": "^0.1.3",
        "electron": "^22.0.2",
        "npm-run-all": "^4.1.5",
        "tslib": "^2.4.1",
        "typescript": "^4.9.4",
        "vite": "^4.0.0",
        "vue-tsc": "^1.0.12"
    }
}
